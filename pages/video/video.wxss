/* pages/video/video.wxss */
/*! 头部 */
.videoContainer .header {
  display: flex;
  padding: 5rpx 10rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header input {
  flex: 1;
  border: 1rpx solid #eee;
  height: 60rpx;
  box-sizing: border-box;
  margin: 0 10rpx;
}
.videoContainer .header .placeholder {
  font-size: 28rpx;
  color: #d43c33;
  text-align: center; 
}


/*! 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 120rpx;
}
.navItem {
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 20rpx;
}

.navItem.active {
  border-bottom: 1px solid #d43c33;
}

/* 视频内容区 */
.videoList {
  height: calc(100vh - 190rpx); /* css3新特性 */
}

.videoItem {
  padding: 0 3%;
}

.videoList .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}