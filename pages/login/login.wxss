/* pages/login/login.wxss */
/*! 包裹器 */
.wrapper{
  position: relative;
  z-index: 90;
  padding-bottom: 40rpx;
}

.left-top-sign {
  font-size: 120rpx;
  color: #f8f8f8;
  position: relative;
  left: -16rpx;
}
/** 欢迎回来 */
.welcome {
 position: relative;
 left: 50rpx;
 top: -90rpx;
 font-size: 46rpx;
 color: #555;
}

/** 手机号和密码 */
.input-content {
  padding: 0 60rpx;
}
.input-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding: 0 30 rpx;
  background:#f8f6fc;
  height: 120rpx;
  border-radius: 4rpx;
  margin-bottom: 50rpx;
}
.input-item:last-child {
  margin-bottom: 0;
}
.input-item .tit {
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}
.input-item input{
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  width: 100%;
}

/** 登录 */
.confirm-btn {
  width: 630rpx !important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background:#d43c33;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}

/**忘记部分  */
.forget-section{
  font-size: 28rpx;
  color: #4399fc;
  text-align: center;
  margin-top: 40rpx;
}

/*! 注册部分 */
.register-section {
  position: absolute;
  left: 0;
  bottom: 50rpx;
  width: 100%;
  font-size: 28rpx;
  color: #606266;
  text-align: center;
}
.register-section text{
  color: #4399fc;
  margin-left: 10rpx;
}

