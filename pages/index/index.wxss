/* pages/index/index.wxss */
/* 首页轮播图 */
.indexContainer .navSwiper{
  width: 100%;
  height: 300rpx;
}

.indexContainer .navSwiper image{
  width: 100%;
  height: 100%;
}

/* 导航区域 */
.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(240,19,19);
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

.navItem text{
  font-size: 28rpx;
}

/* 推荐歌曲 */
.recommendContainer {
  padding: 40rpx 20rpx;
}

.navScroll{
  display: flex;
  margin-top: 20rpx;
  height: 300rpx;
}

.navScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.navScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.navScroll .scrollItem text{
  display: block;
  /*单行文本溢出隐藏*/
  /*white-space: nowrap;*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/

  /* 多行文本溢出 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical; /*设置内部子元素的对其方式*/
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList {
  padding: 0 20rpx;
}

.topListSwiper {
  height: 450rpx;
}

.swiperItem {
  background: #fbfbfb;
  width: 96%;
  height: 100%;
}

.topListSwiper .title {
  font-size: 32rpx;
  line-height: 80rpx;
}

.musicItem {
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem .musicImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
}

.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
}
