/* pages/personal/personal.wxss */
/*! 个人中心 */
.personalContainer {
  width: 100%;
  height: 100%;
}

/*TODO 用户信息部分 */
.personalContainer .user-section {
  height: 520rpx;
  position: relative;
  padding: 100rpx 30rpx 0;
}

/** 用户背景图 */
.user-section .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.7;
  filter: blur(1rpx);
}

/** 用户信息 */
.user-info-box {
  height: 180rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

/* 用户头像 */
.user-info-box .portrait {
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
}

.user-info-box .username {
  font-size: 24rpx;
  color: #303133;
  margin-left: 20rpx;
}

/** 会员卡片 */
.vip-card-box {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 240rpx;
  background-color: rgba(0, 0, 0, .7);
  color: #f7d680;
  padding: 20rpx 24rpx;
  border-radius: 16rpx 16rpx 0 0;
}

/* 会员卡片背景 */
.vip-card-box .card-bg {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}

/* 立即开通会员按钮 */
.vip-card-box .b-btn{
  position: absolute;
  right: 20rpx;
  top: 16rpx;
  width: 132rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #36343c;
  background: #f9e6af;
  border-radius: 20rpx;
}

/* 会员卡片标题 */
.vip-card-box .tit {
  font-size: 22rpx;
  margin-bottom: 28rpx;
}
.vip-card-box .tit .iconfont {
  color: #f6e5a3;
  margin-right: 16rpx;
}

/* 卡片文本信息 */
.vip-card-box .e-m{
  font-size: 34rpx;
  margin-top: 10rpx;
}
.vip-card-box .e-b{
  font-size: 24rpx;
  color: #d8cba9;
  margin-top: 10rpx;
}

/*TODO 个人中心功能部分 */
.cover-container {
  padding: 0 30rpx;
  position: relative;
  background: #f5f5f5;
  margin-bottom: 20rpx;
}

.cover-container .arc {
  position: absolute;
  left: 0;
  top: -34rpx;
  width: 100%;
  height: 36rpx;
}

/* 导航 */
.cover-container .nav-section {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  border-radius: 15rpx;
}


.nav-section .nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-section .nav-item .iconfont {
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}

.nav-section .nav-item text:last-child {
  font-size: 22rpx;
}

/* 功能列表 */
.personalContainer {
  background-color: #fff;
  margin-top: 20rpx;
}

/* 最近播放 */


.cardList {
  margin-top: 20rpx;
}

.cardList .card-item {
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}
.cardList .card-item .more {
  float: right;
}






