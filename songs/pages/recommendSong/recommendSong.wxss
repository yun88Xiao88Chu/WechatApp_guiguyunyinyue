/* pages/recommendSong/recommendSong.wxss */
/*! 头部区域 */
.recommendSongContainer .header {
  width: 100%;
  height: 300rpx;
  position: relative;
}
/** 头部背景 */
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
/** 头部日期 */
.header .date {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -100rpx;
  margin-top: -30rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
}
.header .date .day {
  font-size: 32;
}




/*! 内容区 */
.recommendList {
  position: relative;
  top: -30rpx;
  border-radius: 30rpx;
  padding: 20rpx;
  background: #fff;
}

.listHeader {
  height: 60rpx;
}

.listHeader .allChange {
  float: right;
  color: #333;
  font-size: 26rpx;
}


/* 推荐列表区域 */
.musicList{
  height: calc(100vh - 400rpx);
}

.scrollItem {
  display: flex;
  margin-top: 20rpx;
  position: relative;
}

.scrollItem .musicImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 5rpx;
  margin-right: 20rpx;
}

.scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
}

.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}

